<html>
  <head>
    <link
      href="https://fonts.googleapis.com/css?family=Lato:100,300,400,700,900"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Titillium+Web:wght@600&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="style.css" />
    <script defer src="/login.js"></script>
  </head>

  <body>
    <div class="bg"></div>

    <div class="middle">
      <div class="middle_container">
        <br />
        <img src="./img/AddLogo1.png" alt="Address Book Logo" height="80" />

        <div class="login">
          <form>
            <h2 class="login_h2">Login</h2>
            <ul>
              <li>
                <label for="email" class="label">Email</label>
                <br />
                <input
                  id="email_input"
                  type="text"
                  class="login_input"
                  name="email"
                />
                <div class="email error"></div>
              </li>

              <li>
                <label for="password" class="label">Password</label><br />
                <input
                  id="password_input"
                  class="login_input"
                  type="password"
                  name="password"
                />
                <div id="password_error"></div>
              </li>

              <li>
                <br />
                <button id="login_btn" class="login_btn">Login</button>
                <br />
                <br />
                <p id="signup_link_btn" class="new_account_btn">
                  Create New Account
                </p>
              </li>
            </ul>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
